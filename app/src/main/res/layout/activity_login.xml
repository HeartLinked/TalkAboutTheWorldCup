<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@drawable/back1"
    tools:ignore="HardcodedText,Autofill,TextFields,SpUsage"
    tools:context="com.ss.video.rtc.demo.quickstart.LoginActivity">

    <EditText
            android:id="@+id/room_id_input"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            android:paddingBottom="12dp"
            android:layout_marginTop="190dp"
            android:hint="请输入房间名"
            tools:layout_editor_absoluteY="140dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:textColor="@color/white"
            android:textColorHint="@color/material_on_primary_disabled"
            android:background="@drawable/item_logininput"
            tools:ignore="MissingConstraints" />

    <EditText
            android:id="@+id/user_id_input"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:paddingLeft="16dp"
            android:paddingTop="12dp"
            android:paddingRight="16dp"
            android:paddingBottom="12dp"
            android:hint="请输入用户名"
            android:lines="1"
            android:maxLines="1"
            android:singleLine="true"
            tools:layout_below="@id/room_id_input"
            android:textColor="@color/white"
            android:textColorHint="@color/material_on_primary_disabled"
            android:layout_marginTop="260dp"
            android:background="@drawable/item_logininput"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_id_input"
            tools:ignore="MissingConstraints" />

    <TextView
            android:id="@+id/join_room_btn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="32dp"
            android:layout_marginRight="32dp"
            android:layout_marginTop="22dp"
            android:layout_below="@id/user_id_input"
            android:background="@drawable/join_room_btn_bg"
            android:text="加入房间"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:gravity="center"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_id_input" />

    <TextView
        android:id="@+id/version_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:textColor="@color/black"
        android:textSize="10sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>


</RelativeLayout>